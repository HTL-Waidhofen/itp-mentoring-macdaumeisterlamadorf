<Page x:Class="MentoringUI.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">
    <StackPanel Orientation="Horizontal">
        <StackPanel >
            <Label FontWeight="Bold" FontSize="40" Margin="300 0 0 0" Width="200">Settings</Label>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
            <Image x:Name="htl_logo"  Source="/HTL-Logo.png" Height="100" Margin="155 0 0 0"/>
        </StackPanel>
    </StackPanel>
</Page>
