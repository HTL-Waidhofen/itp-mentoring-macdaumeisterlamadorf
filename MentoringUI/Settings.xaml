<Page x:Class="MentoringUI.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Image Source="/return_button_black.png" Width="50"></Image>
            </StackPanel>
            <StackPanel >
                <Label FontWeight="Bold" FontSize="40" Margin="250 0 0 0" Width="200" Name="settings_lb">Settings</Label>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                <Image x:Name="htl_logo"  Source="/HTL-Logo.png" Height="100" Margin="155 0 0 0"/>
            </StackPanel>
        </StackPanel>
        <Label Height="20"></Label>
        <GroupBox Height="330" RenderTransformOrigin="0.5,0.5" Header="Settings">
            <ComboBox Height="20" Margin="0 0 0 280" IsReadOnly="True" IsEditable="True" Text="Sprache">
                <ComboBoxItem>Englisch</ComboBoxItem>
                <ComboBoxItem>Deutsch</ComboBoxItem>
            </ComboBox>
        </GroupBox>
    </StackPanel>

</Page>
