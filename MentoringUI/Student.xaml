<Page x:Class="MentoringUI.Student"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Student">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Button Width="160" Margin="20,40,0,0" Height="20">Bereits Beantragte Mentoren</Button>
            </StackPanel>
            <StackPanel >
                <Label FontWeight="Bold" FontSize="40" Height="60" Margin="150 20 0 0" Width="150" x:Name="Stutent_lb">Schüler</Label>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                <Image x:Name="htl_logo"  Source="/HTL-Logo.png" Height="100" Margin="175 0 0 0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            
        </StackPanel>


    </StackPanel>
</Page>
