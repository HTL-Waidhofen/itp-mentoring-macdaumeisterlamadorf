<Page x:Class="MentoringUI.Student"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Student">

    <DockPanel LastChildFill="False">
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Grid DockPanel.Dock="Top">
                <Button x:Name="requestedMentors_btn" Width="160" Margin="20,0,0,0" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left">Bereits Beantragte Mentoren</Button>
                <TextBlock x:Name="header_tbl" FontWeight="Bold" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center">Schüler</TextBlock>
                <Image x:Name="htl_logo"  Source="/HTL-Logo.png" Height="100" HorizontalAlignment="Right"/>
            </Grid>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <GroupBox Header="Alle Kurse" Margin="5,10,5,0">
                
            </GroupBox>
        </DockPanel>
    </DockPanel>
</Page>
