<Page x:Class="MentoringUI.CourseManagment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CourseManagment">

    <DockPanel LastChildFill="False">

        <Grid DockPanel.Dock="Top" Height="100">

            <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="40"  Width="400" Name="settings_lb"  HorizontalAlignment="Center">Kursverwaltung</TextBlock>
            <Image x:Name="htl_logo"  Source="/HTL-Logo.png" Height="100" HorizontalAlignment="Right"/>
        </Grid>
        
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" >
            <Button Content="remove" Width="90" Margin=" 150,0,5,0"/>
            <Button Content="edit" Width="90"  Margin=" 0,0,0,0"/>
        </StackPanel>
        <TextBox DockPanel.Dock="Top" TextWrapping="Wrap" Text="" Width="500" Height="300"/>
    </DockPanel>
</Page>