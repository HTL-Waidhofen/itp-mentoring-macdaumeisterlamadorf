<Page x:Class="MentoringUI.CourseManagment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CourseManagment">

    <DockPanel LastChildFill="False">

        <Grid DockPanel.Dock="Top" Height="100">

            <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="40"  Width="400" Name="settings_lb"  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Cambria" >Kursverwaltung </TextBlock>
            <Image x:Name="htl_logo"  Source="/Images/HTL-Logo.png" Height="100" HorizontalAlignment="Right"/>
        </Grid>
        <Label DockPanel.Dock="Top" Height="15"></Label>
        <DockPanel DockPanel.Dock="Top" LastChildFill="False" >
            <Button Content="Löschen" Width="90" Margin=" 150,0,5,0" FontFamily="Cambria"/>
            <Button Content="Bearbeiten" Width="90"  Margin=" 0,0,0,0" FontFamily="Cambria"/>
        </DockPanel>
        <ListBox x:Name="Course_lbx" DockPanel.Dock="Top" Width="500" Height="300" FontFamily="Cambria"/>
    </DockPanel>
</Page>