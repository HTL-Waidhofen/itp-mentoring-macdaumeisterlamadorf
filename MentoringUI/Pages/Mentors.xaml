<Page x:Class="MentoringUI.Mentors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Mentors">
    <DockPanel LastChildFill="False">
       
        <Grid DockPanel.Dock="Top" Height="100">
            <TextBlock FontWeight="Bold" FontSize="40"  Width="200" Name="settings_lb"  HorizontalAlignment="Center">Mentoren</TextBlock>
            <Image x:Name="htl_logo"  Source="/Images/HTL-Logo.png" Height="100" HorizontalAlignment="Right"/>
        </Grid>
        <Grid DockPanel.Dock="Top">
            <Button Content="Anzeige Hinzufügen" Margin="50,0,0,0" HorizontalAlignment="Left" Height="20" Width="130"/>
        </Grid>
        <Label DockPanel.Dock="Top" Height="15"/>
        <TextBox DockPanel.Dock="Top" TextWrapping="Wrap" Text="Suche:" Width="600"/>
        <TextBox DockPanel.Dock="Top" TextWrapping="Wrap" Text="TextBox" Width="600" Height="270" Margin="0,10"/>
    </DockPanel>
</Page>
