<Page x:Class="MentoringUI.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    
    <StackPanel>
        <Label Content="Email Bestätigen" HorizontalAlignment="Center" Margin="0,70,0,0" />
        <Label Content="Sie müssen Ihre Email verifizieren" HorizontalAlignment="Center" Margin="0,3,0,0"/>
        <Label Content="Geben Sie den 8-stelligen Code an, welchen Sie per E-Mail erhalten haben" HorizontalAlignment="Center" Margin="0,3,0,0" />
        <TextBox TextWrapping="Wrap" Text="Zahlen Eingeben" Width="120" Margin="0,25,0,0"/>
        <Button Content="Bestätigen" Width="120" Margin="0,20,0,0"/>

    </StackPanel>
</Page>
