<Page x:Class="MentoringUI.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    
    <DockPanel LastChildFill="False">
        <TextBlock Text="Email Bestätigen" DockPanel.Dock="Top" Width="200" Height="25" TextAlignment="Center"/>
        <TextBlock Text="Sie müssen Ihre Email verifizieren"/>
        <TextBlock Text="Geben Sie den 8-stelligen Code an, welchen Sie per E-Mail erhalten haben"/>
        <TextBox TextWrapping="Wrap" Text="Zahlen Eingeben" Width="120" />
        <Button Content="Bestätigen" Width="120"/>
    </DockPanel>
</Page>
