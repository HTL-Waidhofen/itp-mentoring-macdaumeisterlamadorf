<Page x:Class="MentoringUI.Registrierung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registrierung">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
            <Image x:Name="Logo_img" Source="/HTL-Logo.jpg" Height="100"></Image>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center">
            <Label FontWeight="Bold" FontSize="40">Registrieren</Label>
            <TextBox x:Name="email_tbx" Margin="0,30,0,0"></TextBox>
            <TextBox x:Name="firstname_tbx" Margin="0,15,0,0"></TextBox>
            <TextBox x:Name="name_tbx" Margin="0,15,0,0"></TextBox>
        </StackPanel>
    </StackPanel>
</Page>
