<Page x:Class="MentoringUI.admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="admin">
    <DockPanel LastChildFill="False">
        <Grid DockPanel.Dock="Top">
            <Label FontWeight="Bold" FontSize="40" Width="150" Name="settings_lb" FontFamily="Cambria">Admin</Label>
            <Image x:Name="htl_logo"  Source="/HTL-Logo.png" Height="100" HorizontalAlignment="Right"/>
        </Grid>
        <Label DockPanel.Dock="Top" Height="80"></Label>
        <Button DockPanel.Dock="Top" Width="100" Background="Transparent" BorderBrush="Transparent" FontFamily="Cambria">Nutzerverwaltung</Button>
        <Button DockPanel.Dock="Top" Width="100" Background="Transparent" BorderBrush="Transparent" FontFamily="Cambria">Kursverwaltung</Button>
        <Button DockPanel.Dock="Bottom" Height="50" Width="50" HorizontalAlignment="Left" Background="Transparent" BorderBrush="Transparent">
            <Image Source="/setting.png"></Image>
        </Button>
    </DockPanel>
</Page>
