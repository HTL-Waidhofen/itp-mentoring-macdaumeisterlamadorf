<Page x:Class="MentoringUI.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MentoringUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
            <Image x:Name="htl_logo"  Source="/HTL-Logo.png" Height="100"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label x:Name="Header_l" Margin="0,10,0,0" FontWeight="Bold"  FontSize="40">Anmelden</Label>
            <TextBox x:Name="email_txb" Margin="0,10,0,0" Width="200" Height="20"></TextBox>
        </StackPanel>
    </StackPanel>
</Page>
